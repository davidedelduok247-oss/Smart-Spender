<div>
  <button onclick="showPage('savings')">Page 9: Total Savings</button>
  <button onclick="showPage('income')">Page 10: Income vs Expenses</button>
</div>

<!-- PAGE 9 -->
<section id="savings" class="active">
  <h2>Total Savings Calculator</h2>
  <label>Initial ($): <input type="number" id="initial" value="1000"></label>
  <label>Monthly Deposit ($): <input type="number" id="deposit" value="100"></label>
  <label>Years: <input type="number" id="years" value="10"></label>
  <label>Interest (%): <input type="number" id="rate" value="5"></label>
  <button onclick="calcSavings()">Calculate</button>
  <div class="result" id="saveResult"></div>
</section>

<!-- PAGE 10 -->
<section id="income">
  <h2>Income vs Expenses</h2>
  <label>Income ($): <input type="number" id="incomeVal" value="3000"></label>
  <label>Expenses ($): <input type="number" id="expenseVal" value="2200"></label>
  <button onclick="calcBudget()">Calculate</button>
  <div class="result" id="budgetResult"></div>
</section>

<script>
function showPage(id){
  document.querySelectorAll("section").forEach(s=>s.classList.remove("active"));
  document.getElementById(id).classList.add("active");
}

function calcSavings(){
  let p = +document.getElementById("initial").value;
  let d = +document.getElementById("deposit").value;
  let y = +document.getElementById("years").value;
  let r = (+document.getElementById("rate").value)/100/12;
  let n = y*12;
  let fv = p*Math.pow(1+r,n) + d*((Math.pow(1+r,n)-1)/r);
  document.getElementById("saveResult").innerText = 
    "Total Savings after "+y+" years: $" + fv.toFixed(2);
}

function calcBudget(){
  let income = +document.getElementById("incomeVal").value;
  let expense = +document.getElementById("expenseVal").value;
  let net = income - expense;
  document.getElementById("budgetResult").innerText = 
    "Net Balance: $" + net.toFixed(2) + (net>=0?" (Surplus)":" (Deficit)");
}
</script>

